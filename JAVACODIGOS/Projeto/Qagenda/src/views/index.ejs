<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3" id="divprincial">
            <div id="divinf">
                <%- include('includes/message') %>
                <% if(user){ %>
                    <p id="paragrafo" class="mb-4">Email da atual sessão: <%=user.email%></p>
                <% } %>
            </div>
            <h1 class="text-center mb-4">Agenda</h1>
            <p class="text-center lead mb-5">Seus contatos estão abaixo</p>
            <div id="tablecont" class="responsive-table">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Sobrenome</th>
                            <th scope="col">Email</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Excluir</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.email %></td>
                            </tr>
                                <td><a class="btn btn-primary" href="/contato/index/<%= contato._id %>">Editar</a></td>
                                <td><a class="btn btn-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-2"></div>
        <link rel="stylesheet" href="/assets/css/index.css">

    </div>
</div>
<%- include('includes/rodape') %>
